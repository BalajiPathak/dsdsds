generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String?
  provider     String   @default("local")
  googleId     String?  @unique
  createdAt    DateTime @default(now())
  role         Role     @default(CUSTOMER)
  refreshToken String?
}

enum Role {
  CUSTOMER
  ADMIN
}
